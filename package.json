{
  "name": "@casperiv/useful",
  "version": "2.1.0",
  "description": "List of useful React functions and hooks",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/Dev-CasperTheGhost/useful#readme",
  "exports": {
    ".": "./index.js",
    "./hooks/*": "./hooks/*",
    "./package.json": "./package.json"
  },
  "scripts": {
    "remove-build": "rm -rf index.js index.d.ts hooks",
    "build": "pnpm run remove-build && tsc && pnpm run make-readme",
    "lint": "eslint . --ext .ts,.js,.tsx,.jsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,css,json}\" --ignore-path .gitignore",
    "prettier:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md,css,json}\" --ignore-path .gitignore",
    "make-readme": "node ./scripts/make-hooks-list.js",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dev-CasperTheGhost/useful.git"
  },
  "keywords": [
    "react-hooks",
    "hooks"
  ],
  "author": {
    "name": "Dev-CasperTheGhost",
    "url": "https://www.casperiv.dev"
  },
  "bugs": {
    "url": "https://github.com/Dev-CasperTheGhost/useful/issues"
  },
  "devDependencies": {
    "@casperiv/eslint-config": "^8.0.0",
    "@casperiv/eslint-config-react": "^8.0.0",
    "@types/react": "^18.2.20",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "react": ">=18.2.0",
    "react-dom": ">=18.2.0"
  },
  "files": [
    "hooks/",
    "index.js",
    "index.d.ts"
  ]
}
